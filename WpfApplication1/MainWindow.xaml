<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:controls="clr-namespace:WpfApplication1.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="620.455">
    <Grid d:IsHidden="True">

        <controls:GridCanvas
                x:Name="_canvas" 
                HorizontalAlignment="Left" 
                Margin="10,10,0,0" 
                VerticalAlignment="Top" 
                Background="#FFB95050"
                MouseMove="_canvas_MouseMove"
                MouseUp="_canvas_MouseUp"
                MouseDown="_canvas_MouseDown" 
                Width="500" 
                Height="300"/>
        
        <Button x:Name="button" Content="+" HorizontalAlignment="Left" Margin="527,28,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button_Copy1" Content="-" HorizontalAlignment="Left" Margin="527,55,0,0" VerticalAlignment="Top" Width="75" Click="button_Copy1_Click"/>

    </Grid>
</Window>
